{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% for data in datas %}
            <section>
                <div class="movie">
                    <h2 class="movieTitle">{{ data.name }}</h2>
                    <p>{{ data.year }}</p>
                </div>
            </section>
        {% endfor %}
    </div>
{% endblock %}